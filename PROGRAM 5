total = 0
count = 0
while True:
    num = int(input("Enter an integer (0 to finish): "))
    if num == 0:
        break
    total += num
    count += 1
if count > 0:
    average = total / count
    print("The sum of the numbers is:", total)
    print("The average of the numbers is:", average)
else:
    print("No numbers were entered.")
